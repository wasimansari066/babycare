<!-- Blog Start-->
<div class="container-fluid blog py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 600px;">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">
                Latest News & Blog</h4>
            <h1 class="mb-5 display-3">Read Our Latest News & Blog</h1>
        </div>
        <div class="g-5 justify-content-center">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    {{#each blogs}}
                    <div class="swiper-slide">
                        <div class="wow fadeIn" data-wow-delay="0.1s">
                            <div class="blog-item rounded-bottom">
                                <div class="blog-img overflow-hidden position-relative img-border-radius">
                                    <img src="/{{cover}}" class="img-fluid w-100" alt="Image">
                                </div>
                                <div
                                    class="d-flex justify-content-between px-4 py-3 bg-light border-bottom border-primary blog-date-comments">
                                    <small class="text-dark"><i class="fas fa-calendar me-1 text-dark"></i>{{dateHelper
                                        createdAt}}</small>
                                </div>
                                <div class="px-4 pb-4 bg-light rounded-bottom">
                                    <div class="blog-text-inner">
                                        <a href="/blog/{{_id}}" class="h4">{{name}}</a>
                                        <p class="mt-3 mb-4 admin-description">{{shortDescription}}</p>
                                    </div>
                                    <div class="text-center">
                                        <a href="/blog/{{_id}}"
                                            class="btn btn-primary text-white px-4 py-2 mb-3 btn-border-radius">View
                                            Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{#if (showButtonHelper 'Blogs' title)}}
            <div class="text-center wow fadeIn mt-5 mb-3" data-wow-delay="0.1s">
                <a href="/blog" class="btn btn-primary px-5 py-3 text-white btn-border-radius">Vew All Blogs</a>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<!-- Blog End-->