{{>header}}
<title> {{title}}</title>
{{>navbar}}

{{>hero}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>sidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="bg-primary text-light text-center p-2">ContactUs Queries</h5>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Active</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            <td>{{phone}}</td>
                            <td>{{subject}}</td>
                            <td>{{dateTimeHelper createdAt}}</td>
                            <td><a style="cursor: pointer;" title="Click to Change Status"
                                    href="/admin/contactus/edit/{{_id}}">{{activeHelper active}}</a></td>
                            <td><a href="/admin/contactus/show/{{_id}}" class="btn btn-danger"><i
                                        class="fa fa-eye"></i></a></td>
                            <td>
                                {{#if active}}
                                {{else}}
                                <a href="/admin/contactus/delete/{{_id}}" class="btn btn-danger"><i
                                        class="fa fa-trash"></i></a>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{>footer}}