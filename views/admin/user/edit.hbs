{{>header}}
<title> {{title}}</title>
{{>navbar}}

{{>hero}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-3">
            {{>sidebar}}
        </div>
        <div class="col-md-9">
            <h5 class="bg-primary text-light text-center p-2">Update User <a href="/admin/user"
                    class="text-light float-end">Back</a></h5>
            <form action="/admin/user/update/{{data._id}}" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Name*</label>
                        <input type="text" name="name" value="{{data.name}}" placeholder="Full Name"
                            class="form-control border-primary border-3">
                        {{#if errorMessage.name }}<p class="text-danger">{{errorMessage.name}}</p>{{/if}}
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Phone*</label>
                        <input type="text" name="phone" value="{{data.phone}}" placeholder="Phone Number"
                            class="form-control border-primary border-3">
                        {{#if errorMessage.phone }}<p class="text-danger">{{errorMessage.phone}}</p>{{/if}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Username*</label>
                        <input type="text" name="username" value="{{data.username}}" placeholder="Username"
                            class="form-control border-primary border-3">
                        {{#if errorMessage.username }}<p class="text-danger">{{errorMessage.username}}</p>{{/if}}
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Email*</label>
                        <input type="email" name="email" value="{{data.email}}" placeholder="Email Address"
                            class="form-control border-primary border-3">
                        {{#if errorMessage.email }}<p class="text-danger">{{errorMessage.email}}</p>{{/if}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 mb-3">
                         <label>Role</label>
                        <select name="role" class="form-select border-3 border-primary">
                            <option value="Admin" {{dropdownHelper data.role "Admin"}}>Admin</option>
                            <option value="Super Admin" {{dropdownHelper data.role "Super Admin"}}>Super Admin</option>
                        </select>
                    </div>

                    <div class="col-sm-6 mb-3">
                        <label>Active</label>
                        <select name="active" class="form-select border-3 border-primary">
                            <option value="1" {{dropdownHelper data.active true}}>Yes</option>
                            <option value="0" {{dropdownHelper data.active false}}>No</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{>footer}}