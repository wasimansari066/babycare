{{>header}}
<title> {{title}}</title>
{{>navbar}}

{{>hero}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-6 col-sm-8 col-10 m-auto">
            <h5 class="bg-primary text-light text-center p-2">Login To Access Admin Panel</h5>
            <form action="/admin/user/login" method="post">
                <div class="mb-3">
                    <input type="text" name="username" class="form-control border-3 border-primary"
                        placeholder="Username or Email Address">
                    {{#if errorMessage}}
                    <p class="text-danger">{{errorMessage}}</p>
                    {{/if}}
                </div>
                <div class="mb-3">
                    <input type="password" name="password" placeholder="Password"
                        class="form-control border-4 border-primary">
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
                <a href="/admin/user/forget-password-1">Forget Password?</a>
            </form>
        </div>
    </div>
</div>

{{>footer}}