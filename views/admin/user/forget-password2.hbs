{{>header}}
<title> {{title}}</title>
{{>navbar}}

{{>hero}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-6 col-sm-8 col-10 m-auto">
            <h5 class="bg-primary text-light text-center p-2">Reset Password</h5>
            <form action="/admin/user/forget-password-2" method="post">
                <div class="mb-3">
                    <input type="text" name="otp" class="form-control border-3 border-primary"
                        placeholder="Enter OTP which is Sent on You Registered Email Address">
                    {{#if errorMessage}}
                    <p class="text-danger">{{errorMessage}}</p>
                    {{/if}}
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Submit OTP</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{>footer}}